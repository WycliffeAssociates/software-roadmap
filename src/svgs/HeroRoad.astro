---
const path =
  "M5 68.5C145.733 -16.1667 286.467 -16.1667 427.2 68.5C567.933 153.167 708.667 153.167 849.4 68.5C990.134 -16.1667 1130.87 -16.1667 1271.6 68.5C1412.33 153.167 1553.07 153.167 1693.8 68.5";
---

<svg
  width="1699"
  height="137"
  viewBox="0 0 1699 137"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="road"
>
  <defs>
    <mask id="heroMask">
      <path id="heroMaskPath" d={path} stroke="#fff" data-js="heroMaskPath"
      ></path>
    </mask>
  </defs>
  <path mask="url(#heroMask)" d={path}></path>
</svg>

<style>
  path {
    stroke-linecap: round;
    stroke-width: 8;
    pointer-events: none;
    stroke-dasharray: 2 20;
  }
  path:not([data-js="heroMaskPath"]) {
    stroke: var(--hero-road-stroke);
  }
  .road {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    display: block;
    z-index: -1;
    pointer-events: none;
  }
</style>
